{
  "name": "playcat/queue-base",
  "type": "library",
  "description": "This is part of playcat message queue.",
  "keywords": [
    "rabbitmq",
    "redis",
    "kafka",
    "message",
    "queue"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "CGI.NET",
      "email": "root@playcat.net",
      "homepage": "https://github.com/nsnake/playcat-queue-base"
    }
  ],
  "require": {
    "psr/container": "^1.0|^2.0",
    "php": ">=8.1",
    "ext-redis": "^5.0|^6.0",
    "ext-msgpack": ">=2.0",
    "topthink/think-orm": "^2.0|^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "mockery/mockery": "*"
  },
  "autoload": {
    "psr-4": {
      "Playcat\\Queue\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Playcat\\Queue\\Tests\\": "tests"
    }
  },
  "suggest": {
    "ext-rdKafka": "Kafka.",
    "php-amqplib/php-amqplib": "Rabbitmq."
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "platform-check": false,
    "prefer-stable": true
  },
  "scripts": {
    "test": "php vendor/bin/phpunit",
    "test-coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-clover=coverage.xml",
    "test-unit": "php vendor/bin/phpunit --testsuite Unit",
    "test-integration": "php vendor/bin/phpunit --testsuite Integration"
  },
  "minimum-stability": "stable"
}
